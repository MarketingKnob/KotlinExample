<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_margin="20dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_dialog"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Dialog"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_tab_frag"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Tab Fragment"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_tab_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tab View Pager"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/btn_tab_frag"
                android:background="@color/colorPrimary"/>

        <SeekBar
                android:id="@+id/seekbar_Default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/btn_tab_viewpager"/>

    </RelativeLayout>

    <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

</LinearLayout>